//Program 1: Calculating SGPA
import java.util.Scanner;
class Student {
    String name;      
    String usn;
    int[] credits;
    double[] marks;
    int subjects;

    void input(Scanner sc) {
        System.out.print("Enter the name of the student: ");
        name = sc.nextLine();

        System.out.print("Enter the USN: ");
        usn = sc.nextLine();

        System.out.print("Enter number of subjects: ");
        subjects = sc.nextInt();

        credits = new int[subjects];
        marks = new double[subjects];

        for (int i = 0; i < subjects; i++) {
            System.out.print("Enter credits for subject " + (i + 1) + ": ");
            credits[i] = sc.nextInt();

            System.out.print("Enter marks for subject " + (i + 1) + ": ");
            marks[i] = sc.nextDouble();
        }

        sc.nextLine(); 
    }

    double calculateSGPA() {
        double sumCredits = 0;
        double weightedSum = 0;

        for (int i = 0; i < subjects; i++) {
            sumCredits += credits[i];
            weightedSum += (marks[i] / 10) * credits[i]; 
        }

        return weightedSum / sumCredits;
    }
}
public class SGPA {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Student student = new Student();

        student.input(sc);
        double sgpa = student.calculateSGPA();

        System.out.println("Student: " + student.name);
        System.out.println("USN: " + student.usn);
        for(int i=0;i < student.subjects;i++){
            System.out.println("Credits: " + student.credits[i]);
            System.out.println("Marks: " + student.marks[i]);
        }
        System.out.printf("Calculated SGPA: %.2f\n", sgpa);

        sc.close();
    }
}
